<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="READY TO RECORD"
        android:id="@+id/recordString"
        android:layout_marginTop="55dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Record"
        android:id="@+id/recordButton"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_below="@+id/recordString"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:onClick="RecordButtonClicked"/>

    <Button
        android:text="Play Recording"
        android:id="@+id/playback"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_below="@+id/recordButton"
        android:layout_alignLeft="@+id/recordButton"
        android:layout_alignStart="@+id/recordButton"
        android:layout_marginTop="40dp"
        android:onClick="PlayBackClick"/>
</RelativeLayout>
